{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "fetchs an array of all articles ordered by newest to oldest",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        },
        {
          "title": "Example article",
          "topic": "cooking",
          "author": "beegee",
          "body": "Text from the article..",
          "created_at": "2016-01-30T15:59:13.341Z",
          "votes": 2,
          "comment_count": 2
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "fetchs an article by its given id (any number which exists in the database)",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 3,
        "title": "Example Article",
        "topic": "examples",
        "author": "edsample",
        "body": "This is the body of an example article. Written by Ed.",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "fetchs an array of comments that share the article id provided",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 9,
          "votes": 0,
          "created_at": "2020-01-01T03:08:00.000Z",
          "author": "lars",
          "body": "Superficially charming",
          "article_id": 1
        },
        {
          "comment_id": 4,
          "votes": -100,
          "created_at": "2019-02-23T12:08:00.000Z",
          "author": "iced",
          "body": "Hi there!",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment to the comments table with the article id provided",
    "queries": [],
    "exampleRequest": {
      "username": "icellusedkars",
      "body": "Hi, this is a test comment"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "Hi, this is a test comment",
        "article_id": 10,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2024-10-15T10:24:20.280Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments or decrements the votes of an article",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 2
    },
    "exampleResponse": {
      "article": {
        "article_id": 10,
        "body": "This is a example article",
        "title": "Example title",
        "topic": "examples",
        "author": "icellusedkars",
        "votes": 2,
        "created_at": "2024-10-15T10:24:20.280Z",
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  }
}
